<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/toolboxImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/toolbox"
            android:contentDescription="Caja de herramientas"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Predecir Género"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Predecir Edad"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnUniversity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Universidades por País"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnWeather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clima en RD"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnPokemon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Datos de Pokémon"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnWordpress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Noticias WordPress"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Acerca de mí" />

    </LinearLayout>
</ScrollView>